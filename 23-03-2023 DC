#include <bits/stdc++.h>
 
using namespace std;

int main(int argc, char** argv)
{
    int n;
    cin>>n;
    int arr[n];
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    int k;
    cin>>k;
    for(int i=0;i<n;i++)
    {
        if(arr[i]%2==0)
        {
            cout<<arr[i]+k<<" ";
        }
        else
        {
            cout<<arr[i]-k<<" ";
        }
    }
}
________________________________________
________________________________________
n=int(input())
l=list(map(int,input().split()))
x=int(input())
for i in l:
    if i%2==0:
        print(i+x,end=" ")
    else:
        print(i-x,end=" ")
